{
  "name": "amp-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --watch",
    "eject": "react-scripts eject",
    "flow": "flow",
    "flowwatch": "fswatch -o ./ | xargs -n1 -I{} sh -c 'clear; printf \"\\033[3J\" && flow'",
    "scss": "scss --watch src/styles/scss/index.scss:src/styles/css/index.css src/styles/scss/storybook.scss:src/styles/css/storybook.css",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "dependencies": {
    "@amcharts/amcharts3-react": "^3.1.0",
    "@axetroy/react-download": "^1.1.1",
    "@blueprintjs/core": "~2.3.1",
    "@blueprintjs/select": "~2.0.1",
    "@blueprintjs/table": "^3.0.0",
    "accounting-js": "^1.1.1",
    "amcharts3": "^3.21.13",
    "d3-dsv": "^1.0.8",
    "d3-format": "^1.3.0",
    "d3-shape": "^1.2.0",
    "d3-time-format": "^2.1.1",
    "date-fns": "^1.29.0",
    "ethers": "git+https://github.com/ethers-io/ethers.js.git",
    "express": "^4.16.3",
    "jest-localstorage-mock": "^2.2.0",
    "nodemon": "^1.18.2",
    "polished": "^1.9.3",
    "proof-contracts-interfaces": "https://github.com/ProofSuite/proof-contract-interfaces#master",
    "rc-steps": "^3.1.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-dropzone": "^4.2.13",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.4",
    "react-stockcharts": "^0.7.7",
    "react-transition-group": "^2.4.0",
    "react-virtualized": "^9.20.1",
    "redux": "^4.0.0",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "sorted-array": "^2.0.2",
    "styled-components": "~3.3.3",
    "styled-css-grid": "^0.11.0",
    "styled-system": "^3.0.2",
    "ws": "^5.2.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.8",
    "@storybook/addon-console": "^1.0.4",
    "@storybook/addon-info": "^3.4.8",
    "@storybook/addon-knobs": "^3.4.8",
    "@storybook/addon-links": "^3.4.8",
    "@storybook/addon-options": "^3.4.8",
    "@storybook/addons": "^3.4.8",
    "@storybook/react": "^3.4.8",
    "babel-core": "^6.26.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "flow-bin": "^0.75.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  }
}
